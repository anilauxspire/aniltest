<aura:component implements="lightning:availableForFlowScreens,force:hasRecordId" access="global"> 
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="options" type="List" default="[
    {'label': 'Collect and Upload PLD Information From Customers', 'value': 'option1'},
    {'label': 'PLD Analysis Uploaded', 'value': 'option2'},
    {'label': 'Confirm PLD Analysis with the Customer', 'value': 'option3'}                                                    
    ]"/>
    <aura:attribute name="value" type="List"/>
    <aura:attribute name="isModalOpen" type="Boolean" default="false"/>
    
    <c:updateFileModalComponent isOpen="{!v.isModalOpen}" recordId="{!v.recordId}" parentComponent="{!this}"/>

    <lightning:layout>
        <lightning:layoutItem padding="around-small">
            <lightning:checkboxGroup name="Checkbox Group"                             
                                     options="{! v.options }"
                                     value="{! v.value }"
                                     onchange="{! c.handleChange }"
                                     disabled="true"/>
        </lightning:layoutItem>
    </lightning:layout>
    
    <lightning:layout horizontalAlign="center">
        <lightning:layoutItem padding="around-small">
            <lightning:button variant="brand" label="Upload PLD File" title="Brand action 1" onclick="{! c.openModal }"/>
        </lightning:layoutItem>
        <lightning:layoutItem padding="around-small">
            <lightning:button variant="brand" label="Upload PLD Analysis" title="Brand action 2" onclick="{! c.handleClick }"/>
        </lightning:layoutItem>
        <lightning:layoutItem padding="around-small">
            <lightning:button variant="brand" label="View PLD Analysis" title="Brand action 3" onclick="{! c.handleClick }"/>
        </lightning:layoutItem>
        <lightning:layoutItem padding="around-small">
            <lightning:button variant="brand" label="Customer Confirmed PLD" title="Brand action 4" onclick="{! c.handleClick }"/>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>